<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/resultado_proveedor.css">
    <title>Resultados de Búsqueda de Medicamentos</title>
</head>
<body>
    <h1>Resultados de Búsqueda de Medicamentos</h1>
    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Stock</th>
                <th>Caducidad</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% if (medicamentos.length > 0) { %>
                <% medicamentos.forEach(medicamento => { %>
                    <tr>
                        <td><%= medicamento.nombre %></td>
                        <td><%= medicamento.precio %></td>
                        <td><%= medicamento.cantidad %></td>
                        <td><%= medicamento.fecha_caducidad %></td>
                        <td class="button-container">
                            <a href="/menu/modificar_medicamento/<%= medicamento.id_medicamentos %>" class="edit-button">Editar</a>
                            <form action="/menu/eliminar_medicamento/<%= medicamento.id_medicamentos %>?nombre=<%= nombreBuscado %>" method="post" style="display:inline;">
                                <button type="submit" class="delete-button">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="6">No se encontraron medicamentos con ese criterio de búsqueda.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
    <div class="button-container">
        <a href="/menu/medicamentos" class="edit-button">Regresar</a>
    </div>
</body>
</html>
